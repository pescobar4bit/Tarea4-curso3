<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/perro5"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
         />

        <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtLikesMascotaPerfil"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="@string/likesmascota"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="100dp"
                    />


                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/btnHuesoNaranja"
                    android:background="@drawable/hueso_amarillo"
                    android:layout_gravity="center_vertical"

                    />

        </TableRow>


        </TableLayout>


</LinearLayout>
</android.support.v7.widget.CardView>